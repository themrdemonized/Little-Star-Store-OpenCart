        <h1 style="font-size: 40px;">{{ heading_title }}</h1>
        <div><a href="{{ continue }}" class="btn btn-primary">{{ text_error }}</a></div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
